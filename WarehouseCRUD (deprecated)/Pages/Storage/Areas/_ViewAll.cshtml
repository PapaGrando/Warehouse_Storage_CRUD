@using global::Storage.Core.DTO
@model IEnumerable<AreaInfo>
<table class="table table-primary" id="areaTable">
    @if (Model.Count() != 0)
    {
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().SubAreasCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().CellsCount)
                </th>
                <th>
                    Действия
                </th>
            </tr>
        </thead>

        @foreach (var element in Model)
        {
            <tr>
                <td>
                    @element.Name
                </td>
                <td>
                    @element.SubAreasCount
                </td>
                <td>
                    @element.CellsCount
                </td>
                <td text-right">
                    <div class="vstack gap-3">
                        <form method="post" asp-page="Index" asp-route-id="@element.Id" asp-page-handler="Delete"
                      onsubmit="return jQueryModalDelete(this, 'Удалить эту зону? Для удаления она должна быть освобождена от товаров.')" class="d-inline">
                            <button type="submit" class="btn btn-danger text-white"> <i class="bi bi-trash3"></i></button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    }
</table>
<script>
    $(document).ready(function() {
        $("#areaTable").DataTable({ processing: true });
    });
</script>