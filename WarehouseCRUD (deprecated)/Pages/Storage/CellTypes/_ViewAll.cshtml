@using global::Storage.Core.Models.Storage
@model IEnumerable<CellType>
<table class="table table-striped" id="ctTable">

    @if (Model.Count() != 0)
    {
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().MaxWeight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Length)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Width)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Height)
                </th>
                <th>
                    Действия
                </th>
            </tr>

        </thead>
        @foreach (var element in Model)
        {
            <tr>
                <td>
                    @element.Name
                </td>
                <td>
                    @element.MaxWeight
                </td>
                <td>
                    @element.Length
                </td>
                <td>
                    @element.Width
                </td>
                 <td>
                    @element.Height
                </td>
                <td class="text-right">
                    <form method="post" asp-page="Index" asp-route-id="@element.Id" asp-page-handler="Delete"
                  onsubmit="return jQueryModalDelete(this, 'Удалить этот тип ячейки? Если есть созданные ячейки с этим типом, удаление невозможно')"
                  class="d-inline">
                        <button type="submit" class="btn btn-danger text-white"> <i class="bi bi-trash3"></i></button>
                    </form>
                </td>
            </tr>
        }
    }
    else
    {
        <tr><td class="text-xxl-center">Нет категорий</td></tr>
    }
</table>
<script>
    $(document).ready(function() {
        $("#ctTable").DataTable({ processing: true });
    });
</script>