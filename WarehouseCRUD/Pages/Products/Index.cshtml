@page
@model WarehouseCRUD.Storage.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Список товаров";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Зарегистрированные товары</h2>
        </div>
        @*<div class="col-6 text-end">
            <button class="btn btn-sm btn-dark details" data-id="@item.Key">Details</button>
            </div>*@
        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-info"><i class="bi bi-plus-lg"></i>Добавить позицию</a>
        </div>
    </div>
</div>

<p>

</p>
<table class="table table-boarded table-stripped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Height)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Product)
        {
            <tr>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">
                        <img id="productImage" src="@(item.ImageUrl is null ?
                            Href(item.DefailtImageUrl) : item.ImageUrl)"
                         class="img-list-thumbnail" />
                    </a>
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-link">
                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Length)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Width)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Height)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="bi bi-pen"></i></a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash3"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
