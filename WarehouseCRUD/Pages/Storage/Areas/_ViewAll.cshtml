@using WarehouseCRUD.Storage.ViewModels
@model IEnumerable<AreaViewModel>
<table class="table table-bordered" id="areaTable">
    @if (Model.Count() != 0)
    {
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().SubAreasCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().CellsCount)
                </th>
            </tr>
        </thead>


        @foreach (var element in Model)
        {
            <tr>
                <td>
                    @element.Name
                </td>
                <td>
                    @element.SubAreasCount
                </td>
                <td>
                    @element.CellsCount
                </td>
                <td text-right">
                    <div class="vstack gap-3">
                        <a asp-page="./Edit" asp-route-id="@element.AreaId" class="btn btn-warning">
                            Редактировать места для хранения
                        </a>
                        <a asp-page="./Delete" asp-route-id="@element.AreaId" class="btn btn-danger">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    }
</table>
<script>
    $(document).ready(function () {
        $("#areaTable").DataTable();
    });
</script>